<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/light_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:radius">80dp</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle2" parent="TextStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="transparentButton">
        <item name="android:color">#66FF0000</item>
        <item name="android:alpha">0.25</item>
    </style>

    <style name="messageStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="HideActionBar" parent="Theme.Design.NoActionBar">

    </style>

    <style name="Button_Wipe_Data">
        <item name="backgroundTint">@color/wipe_data1</item>
        <item name="android:drawable">@drawable/red_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ImageViewStyle">
        <item name="cornerSize">20dp</item>
        <item name="cornerFamily">rounded</item>

    </style>

    <style name="fabTheme" parent="Widget.Design.FloatingActionButton">
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="myToggle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="color">@color/white</item>
    </style>

    <style name="NavigationTheme">
        <item name="android:textSize">14sp</item>
        <item  name="android:textStyle">bold</item>
        <item name="barrierMargin">50dp</item>
    </style>

    <style name="userProfileSetting">
        <item name="textFillColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="MaterialDialogSheetTransparent" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="behavior_peekHeight">150dp</item>
        <item name="android:windowFullscreen">false</item>
    </style>
    <style name="Custom_Dialog" parent="ThemeOverlay.AppCompat.Light" >
        <item name="windowMinWidthMajor">100%</item>
        <item name="windowMinWidthMinor">100%</item>
    </style>
</resources>