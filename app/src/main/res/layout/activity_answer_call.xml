<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:elevation="15dp"
    android:gravity="center"
    android:background="@color/white"
    android:paddingVertical="15dp"
    tools:context=".call.callBanner.AnswerCallActivity">

        <TextView
            android:id="@+id/incomingCallLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incoming Call"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16dp"
            android:textColor="@color/black"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/callerProfileBg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/caller_profile_bg"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/incomingCallLbl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/userName"
            />


        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/callerProfile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:roundPercent="1"
            android:src="@drawable/user_icon"
            app:layout_constraintStart_toStartOf="@id/callerProfileBg"
            app:layout_constraintEnd_toEndOf="@id/callerProfileBg"
            app:layout_constraintTop_toTopOf="@id/callerProfileBg"
            app:layout_constraintBottom_toBottomOf="@id/callerProfileBg"

            />

        <TextView
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="65dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="66666"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/callerProfileBg"
            app:layout_constraintBottom_toTopOf="@id/userAlias"/>

        <TextView
            android:id="@+id/userAlias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="\@Crypto"
            android:textSize="12dp"
            android:textColor="@color/grey_color_for_txt_bg"
            android:fontFamily="@font/poppins"
            app:layout_constraintEnd_toEndOf="@id/userName"
            app:layout_constraintStart_toStartOf="@id/userName"
            app:layout_constraintTop_toBottomOf="@+id/userName"
            app:layout_constraintBottom_toTopOf="@id/callOperationsBarrier"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/callOperationsBarrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="top"
            app:constraint_referenced_ids="acceptCall,declineCall" />

        <ImageView
            android:id="@+id/declineCall"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/call_decline"
            android:gravity="center"
            android:layout_marginHorizontal="50dp"
            android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/acceptCall"
             />

        <ImageView
            android:id="@+id/acceptCall"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/accept_call"
            android:gravity="center"
            android:layout_marginHorizontal="50dp"
            android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/declineCall"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
             />

</androidx.constraintlayout.widget.ConstraintLayout>