<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="15dp"
    android:gravity="center"
    android:paddingVertical="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/incomingCallLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incoming Call"
            android:textColor="@color/text_color"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/callerProfileBg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/caller_profile_bg"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/incomingCallLbl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/callerProfilr"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:roundPercent="1"
            android:src="@drawable/user_icon"
            app:layout_constraintStart_toStartOf="@id/callerProfileBg"
            app:layout_constraintEnd_toEndOf="@id/callerProfileBg"
            app:layout_constraintTop_toTopOf="@id/callerProfileBg"
            app:layout_constraintBottom_toBottomOf="@id/callerProfileBg"
            />

        <TextView
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="65dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="66666"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/callerProfileBg" />

        <TextView
            android:id="@+id/userAlias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="\@Crypto"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="@id/userName"
            app:layout_constraintStart_toStartOf="@id/userName"
            app:layout_constraintTop_toBottomOf="@+id/userName" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/callOperationsBarrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="top"


            app:constraint_referenced_ids="acceptCall,declineCall" />

        <ImageView
            android:id="@+id/declineCall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/call_decline"
            android:gravity="center"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/acceptCall"
            app:layout_constraintTop_toBottomOf="@id/userAlias" />

        <ImageView
            android:id="@+id/acceptCall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/accept_call"
            android:gravity="center"
            android:layout_marginTop="35dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/declineCall"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userAlias" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>