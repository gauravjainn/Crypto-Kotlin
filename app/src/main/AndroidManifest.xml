<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.siltech.cryptochat">

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission
        android:name="android.permission.READ_PRIVILEGED_PHONE_STATE"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.STORAGE" />

    <application
        android:name=".app.AppModule"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cryptochat"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".WebRTCDemo.NewWebRtcCallActivity"
            android:exported="false" />
        <activity
            android:name=".call.callBanner.AnswerCallActivity"
            android:exported="false" />
        <activity
            android:name=".chat.NewCallActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".callUtils.NewChatCallDemo"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.aunt.AddNewPasswordActivity"
            android:exported="false" />

        <meta-data
            android:name="android.support.FILE_PROVIDER_PATHS"
            android:resource="@xml/filepaths" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".chat.chat_users.ChatUsersActivity"
            android:exported="false" />
        <activity
            android:name=".contacts.addNewGroup.AddNewChatActivity"
            android:exported="false" />
        <activity
            android:name=".contacts.addNewGroup.addNewGroupActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SplashActivity2"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".chat.ChatUserCallActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>
        <!--
activity
            android:name=".ui.MainActivity"
            android:exported="true" /
        -->
        <activity
            android:name=".updater.UpdateActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".settings.SettingsActivity"
            android:exported="true" />
        <activity
            android:name=".ui.aunt.SignInActivity"
            android:exported="true" />
        <activity
            android:name=".call.CallActivity"
            android:exported="true" />
        <activity
            android:name=".call.Call_finder"
            android:exported="true" />
        <activity
            android:name=".addUser.addUserActivity"
            android:exported="true" />
        <activity android:name=".ui.Picker" />
        <activity
            android:name=".ui.Test"
            android:exported="true"
            android:noHistory="true" />
        <activity
            android:name=".ui.CodeScreen"
            android:exported="true" />
        <activity
            android:name=".chat.Chat"
            android:exported="true"
            android:usesCleartextTraffic="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.Add"
            android:exported="true" />
        <!--
activity
            android:name=".ui.HomeActivity"
            android:exported="true" /
        -->
        <activity
            android:name=".ui.EnterPasswordActivity"
            android:exported="true"
            android:noHistory="true" />
        <activity
            android:name=".contacts.HomeActivityKotlin"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" /> <!-- android:theme="@style/Widget.AppCompat.ActionBar" -->
        <!-- /> -->
        <activity
            android:name=".contacts.userProfileSetting.UserProfileSettingActivity"
            android:exported="false" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/notification_channel_id" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/common_google_signin_btn_icon_dark" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorPrimary" />

        <service
            android:name=".services.MyFireBaseMessagingService"
            android:directBootAware="true"
            android:enabled="true"
            android:exported="true"
            android:stopWithTask="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".call.callBanner.CallBannerService"
            android:directBootAware="true"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".call.callBanner.OnGoingCallBanner"
            android:directBootAware="true"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name=".callUtils.HungUpBroadCastReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="CallDeclineClick"></action>
            </intent-filter>
        </receiver>
        <receiver
            android:name=".callUtils.AcceptBroadCastReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="CallAcceptClick"></action>
            </intent-filter>
        </receiver>

    </application>

</manifest>